source "https://rubygems.org"

gem "jekyll", "~> 3.9.4"

gem "kramdown", "~> 2.3.0"
gem "kramdown-parser-gfm", "~> 1.1.0"

group :jekyll_plugins do
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-assets"
  gem "webrick", "~> 1.7"
end

# Windows環境での動作確認用
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1"
  gem "tzinfo-data"
end
